          rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/admin_index.css" />
    <link rel="stylesheet" type="text/css" href="~/css/header.css" />

    <link rel="stylesheet" type="text/css" href="~/css/edit_category.css" />
</head>

<body>

    <header>

        <div class="bs-example">
            <div class="topnav">
                <nav class="navbar navbar-expand-md navbar-light bg-light">
                    <img src="~/website_images/logo.png" class="logo_image" />
                    <div class="topnav-right user">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                                    <img src="~/website_images/profile_user_blue.png">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item">ADMIN</a>
                                    <div class="dropdown-divider"></div>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="dropdown-item logout" id="log-out">Log Out</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="topnav-right"><a class="user_name">ADMIN</a></div>
                </nav>
            </div>
        </div>


        <nav class="navbar navbar-expand-md navbar-custom ">
            <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto ml-auto mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="ADMINs" asp-action="Index">USER LIST</a>
                    </li>
                    <a asp-controller="CATEGORIES" asp-action="Index" class="nav-link">Create Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="REPORTS_ADMIN" asp-action="ReportPost2">Reports</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="section1">
        <div class="container register-form">
            <div class="form">
                <div class="form-content ">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h2 class="sign-up-h2">Edit Categories</h2>
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <div class="input-icons">
                                    <input asp-for="categories_name" class="sign-up-input form-control" type="text"
                                           placeholder="Enter Category Name" value="" />
                                    <span asp-validation-for="categories_name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="SAVE">
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div style="height: 200px;"> </div>
    <footer style="background-color:#F67576; margin-top:200px;" class="text-center">

        <div class="text-white text-center p-3" style="background-color:#6406B2">
            © 2021 Copyright:
            <a class="text-white" href="">All Rights Reserved.</a>
        </div>
    </footer>
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- js script -->
    <!--<script src="js/<%=script%>"></script>-->

</body>

