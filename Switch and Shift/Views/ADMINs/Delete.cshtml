                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-5">
                                    <h5 class="mb-0 seller_name">User Email :</h5>
                                </div>
                                <div class="col-sm-7 text-secondary">@Html.DisplayFor(model => model.Email)</div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-5">
                                    <h5 class="mb-0 seller_email">User Phone Number :</h5>
                                </div>
                                <div class="col-sm-7 text-secondary">@Html.DisplayFor(model =>model.Phone)</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="UserId" />
                <input type="submit" value="Ban" class="btn btn-danger" /> |

            </form>

        </div>
    </div>

    
</div>

