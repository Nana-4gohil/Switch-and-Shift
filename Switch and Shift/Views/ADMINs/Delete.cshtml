    <div class="section2-product-details" style="margin: 70px; margin-left: 10%; margin-right: 10%">
        <div class="container">

            <div class="row">

                <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-5">
                                    <h5 class="mb-0 seller_name">User First Name :</h5>
                                </div>
                                <div class="col-sm-7 text-secondary">@Html.DisplayFor(model => model.FirstName)</div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-5">
                                    <h5 class="mb-0 seller_email">User Last Name :</h5>
